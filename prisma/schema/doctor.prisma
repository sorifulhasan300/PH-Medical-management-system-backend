model Doctor {
  id String @id @default(uuid(7))
  
  name String @db.VarChar(100)
  email String @unique @db.VarChar(255)
  profilePhoto String? @db.VarChar(100)

  contactNumber String? @db.VarChar(20)
  registrationNumber String? @db.VarChar(50)
  experience Int? @db.Integer
  gender Gender?
  address String? @db.Text

  appointmentFee Float? 
  qualification String? @db.VarChar(255)
  currentWorkplace String? @db.VarChar(255)
  designation String? @db.VarChar(255)
  averageRating Float @default(0.0)

  isDeleted Boolean @default(false)
  deletedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  specialties DoctorSpecialty[]
  userId String @unique
  user User @relation(fields: [userId], references: [id], onDelete: Cascade , onUpdate: Cascade)
  doctorSchedules DoctorSchedules[]
    appointments      Appoitnment[]
  reviews           Review[]
  medicalReports    MedicalReport[]


    @@index([isDeleted], name: "idx_doctor_is_deleted")
    @@index([email], name: "idx_doctor_email")
    @@map("doctor")

}

model DoctorSchedules {
  id String @id @default(uuid(7))
  doctorId   String   
  scheduleId String   
  isBooked   Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  doctor   Doctor   @relation(fields: [doctorId], references: [id])
  schedule Schedule @relation(fields: [scheduleId], references: [id])

  // An appointment is associated with this specific doctor's schedule slot
  appointment Appoitnment?

  @@unique([doctorId, scheduleId])
  @@map("doctor_schedules")
}